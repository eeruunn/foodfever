<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/bubblegum_sans"
        android:text="Enter Your Registerd Phone Number"
        android:textAlignment="center"
        android:textColor="#302e2e"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/resetphonetext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter phone number"
        android:inputType="number"
        android:maxLength="15"
        android:background="@drawable/loginreg_input"
        android:textAlignment="center"
        android:textSize="20sp"
        android:padding="15dp"
        android:layout_marginTop="100dp"
        android:textColor="#000"/>
    <TextView
        android:id="@+id/passwordresetemptyphonewarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/please_enter_your_registered_phone_number"
        android:textColor="@android:color/holo_red_light"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/passwordresetinvalidphonewarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="account with this phone number does'nt exist !"
        android:textColor="@android:color/holo_red_light"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="15sp"/>


    <Button
        android:id="@+id/resetphoneconfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/droid_sans"
        android:text="Confirm"
        android:textColor="#fff"
        android:textSize="25sp"
        android:textStyle="bold" />


</LinearLayout>