<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:paddingRight="12dp"
    android:paddingTop="12dp"
    android:paddingLeft="12dp"
    android:paddingBottom="0dp">

    <TextView
        android:id="@+id/skiplogintxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:textAlignment="textEnd"
        android:textSize="15sp"
        android:textColor="@color/blue"
        android:fontFamily="@font/open_sans_semibold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/bubblegum_sans"
        android:text="Login"
        android:textAlignment="center"
        android:textColor="#302e2e"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/loginphone1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone number"
        android:padding="12dp"
        android:inputType="phone"
        android:background="@drawable/loginreg_input"
        android:textSize="18sp"
        android:layout_marginTop="75dp"
        android:textColor="#000"/>
    <EditText
        android:id="@+id/loginpass1"
        android:layout_width="match_parent"
        android:background="@drawable/loginreg_input"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="18sp"
        android:layout_marginTop="18dp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/forgotpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="end"
        android:text="Forgot password?"
        android:textSize="12sp"
        android:textColor="@color/blue"
        android:clickable="true"/>
    <TextView
        android:id="@+id/credwarning"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="wrong phonenumber or password !"
        android:textColor="@android:color/holo_red_light"
        android:textSize="20sp"
        android:gravity="center"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/open_sans_semibold"
        android:text="Login"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/registertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Don't have an account? Register"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        android:clickable="true"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/open_sans_semibold"/>


</LinearLayout>